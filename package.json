{
  "name": "@sigureya/rmmzmock",
  "version": "1.0.0",
  "description": "A TypeScript Mock library for RpgMakerMZ-related",
  "main": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/rmmzMock.cjs.js",
      "types": "./dist/index.d.ts",
      "import": "./dist/rmmzMock.es.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "vite build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sigureya/RmmzMock.git"
  },
  "keywords": [
    "RPG Maker",
    "RPGMakerMZ",
    "types",
    "typescript"
  ],
  "author": "Max Siguren",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "typescript": "^5.0.0",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/Sigureya/RmmzMock/issues"
  },
  "homepage": "https://github.com/Sigureya/RmmzMock#readme"
}
